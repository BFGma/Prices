CREATE TABLE IF NOT EXISTS Mat_gr (
	Code integer PRIMARY KEY GENERATED BY DEFAULT AS IDENTITY,
	Name varchar(32) UNIQUE
)

CREATE TABLE IF EXISTS Producer (
	Code integer PRIMARY KEY GENERATED BY DEFAULT AS IDENTITY,
	Name varchar(32) UNIQUE,
	Note varchar(32)
)

CREATE TABLE IF NOT EXISTS Mat (
	Code integer PRIMARY KEY GENERATED BY DEFAULT AS IDENTITY,
	Code_group integer DEFAULT 0 REFERENCES Mat_gr(Code) ON UPDATE CASCADE ON DELETE SET NULL,
	Code_producer integer DEFAULT 0 REFERENCES Producer(Code) ON UPDATE CASCADE ON DELETE SET NULL,
	Name varchar(100) UNIQUE,
	Price numeric(12, 2) DEFAULT 0 CHECK (price >= 0),
	Meas varchar(5) NOT NULL DEFAULT 'шт',
)